---
layout: layout.njk
title: Home
---

<ul class="guide-list">
  {%- for guide in collections.guides %}
  <li class="guide-item">
    <h2 class="guide-title">
      <a href="{{ guide.url }}">{{ guide.data.title }}</a>
    </h2>
    <div class="guide-meta">
      <time datetime="{{ guide.date | isoDate }}">
        {{ guide.date | readableDate }}
      </time>
    </div>
    {% if guide.data.description %}
    <p class="guide-description">{{ guide.data.description }}</p>
    {% endif %}
    {% if guide.data.audio %}
    <div class="audio-player">
      <h3>Listen to this guide</h3>
      <audio controls preload="metadata">
        <source src="/audio/{{ guide.data.audio }}" type="audio/mpeg">
        Your browser does not support the audio element.
      </audio>
    </div>
    {% endif %}
  </li>
  {%- endfor %}
</ul>
